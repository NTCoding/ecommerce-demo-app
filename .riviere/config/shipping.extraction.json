{
  "name": "shipping",
  "path": "shipping-domain/src/**/*.ts",
  "useCase": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "useCase" } },
    "extract": {
      "useCaseName": { "fromClassName": true }
    }
  },
  "eventHandler": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "eventHandler" } },
    "extract": {
      "handlerName": { "fromClassName": true },
      "subscribedEvents": { "fromProperty": { "name": "subscribedEvents", "kind": "instance" } }
    }
  },
  "domainOp": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "domainOp" } },
    "extract": {
      "operationName": { "fromClassName": true }
    }
  },
  "api": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "api" } },
    "extract": {
      "apiType": { "literal": "REST" },
      "route": { "fromProperty": { "name": "route", "kind": "instance" } },
      "method": { "fromProperty": { "name": "method", "kind": "instance" } }
    }
  },
  "event": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "event" } },
    "extract": {
      "eventName": { "fromClassName": true }
    }
  },
  "ui": { "notUsed": true },
  "eventPublisher": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "eventPublisher" } }
  },
  "customTypes": {
    "backgroundJob": {
      "find": "functions",
      "where": { "hasJSDoc": { "tag": "backgroundJob" } },
      "extract": {
        "jobName": { "fromFilePath": { "pattern": ".*/(.+)\\.ts$", "capture": 1 } }
      }
    }
  }
}
