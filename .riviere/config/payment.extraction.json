{
  "name": "payment",
  "path": "payment-domain/src/**/*.ts",
  "useCase": {
    "find": "classes",
    "where": { "implementsInterface": { "name": "IPaymentUseCase" } },
    "extract": {
      "useCaseName": { "fromClassName": true }
    }
  },
  "eventHandler": {
    "find": "classes",
    "where": { "implementsInterface": { "name": "IPaymentEventHandler" } },
    "extract": {
      "handlerName": { "fromClassName": true },
      "subscribedEvents": { "fromProperty": { "name": "subscribedEvents", "kind": "instance" } }
    }
  },
  "domainOp": {
    "find": "classes",
    "where": { "implementsInterface": { "name": "IPaymentDomainOp" } },
    "extract": {
      "operationName": { "fromClassName": true }
    }
  },
  "api": { "notUsed": true },
  "event": {
    "find": "classes",
    "where": { "implementsInterface": { "name": "IPaymentEvent" } },
    "extract": {
      "eventName": { "fromClassName": true }
    }
  },
  "ui": { "notUsed": true },
  "eventPublisher": {
    "find": "classes",
    "where": { "implementsInterface": { "name": "IPaymentEventPublisher" } }
  }
}
