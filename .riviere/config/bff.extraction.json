{
  "name": "bff",
  "path": "bff/src/**/*.ts",
  "useCase": {
    "find": "classes",
    "where": { "nameEndsWith": { "suffix": "UseCase" } },
    "extract": {
      "useCaseName": { "fromClassName": true }
    }
  },
  "eventHandler": { "notUsed": true },
  "domainOp": { "notUsed": true },
  "api": {
    "find": "classes",
    "where": { "hasJSDoc": { "tag": "bffApi" } },
    "extract": {
      "apiType": { "literal": "REST" },
      "route": { "fromProperty": { "name": "route", "kind": "instance" } },
      "method": { "fromProperty": { "name": "method", "kind": "instance" } }
    }
  },
  "event": { "notUsed": true },
  "ui": { "notUsed": true }
}
