{
  "name": "notifications",
  "path": "notifications-domain/src/**/*.ts",
  "useCase": {
    "find": "classes",
    "where": { "extendsClass": { "name": "BaseNotificationUseCase" } },
    "extract": {
      "useCaseName": { "fromClassName": true }
    }
  },
  "eventHandler": {
    "find": "classes",
    "where": { "nameMatches": { "pattern": "^(?!Base).+Handler$" } },
    "extract": {
      "handlerName": { "fromClassName": true },
      "subscribedEvents": { "fromProperty": { "name": "subscribedEvents", "kind": "instance" } }
    }
  },
  "domainOp": {
    "find": "classes",
    "where": { "extendsClass": { "name": "BaseNotificationDomainOp" } },
    "extract": {
      "operationName": { "fromClassName": true }
    }
  },
  "api": { "notUsed": true },
  "event": { "notUsed": true },
  "ui": { "notUsed": true },
  "eventPublisher": { "notUsed": true }
}
