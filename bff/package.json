{
  "name": "@ecommerce-demo/bff",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "generate:clients": "npm run generate:orders && npm run generate:inventory && npm run generate:payment && npm run generate:shipping",
    "generate:orders": "openapi-typescript http://localhost:3000/openapi.json -o src/infrastructure/orders-client.ts",
    "generate:inventory": "openapi-typescript http://localhost:3001/openapi.json -o src/infrastructure/inventory-client.ts",
    "generate:payment": "openapi-typescript http://localhost:3003/openapi.json -o src/infrastructure/payment-client.ts",
    "generate:shipping": "openapi-typescript http://localhost:3002/openapi.json -o src/infrastructure/shipping-client.ts"
  },
  "dependencies": {
    "@living-architecture/riviere-extract-conventions": "latest",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "openapi-typescript": "^6.7.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
